<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{contents}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <div>
  <div>
    <h3>Comments:</h3>
  {{#if comments.length}}
  <div>

  {{#each comments as |comment|}}
    <div>
      <div>
        <p><a href="/comment/{{comment.id}}">{{comment.contents}}</a></p>
      </div>
      <div>
        <button class="btn btn-danger" data-id="{{comment.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}

    <form class="form new-comment-form">
      <div class="form-group">
        <label for="post-title">Add comment:</label>
        <textarea data-post-id={{id}} class="form-input" type="text" id="comment-text" name="comment-text"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/comment.js"></script>